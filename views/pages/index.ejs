<% include ../partials/header %>

<div class="col-md-12">
	<a href="/event/add" class="btn btn-success btn-lg"> Add a new event</a>
	<hr>
</div>

<br/>

<div class="">
	<div class="col-md-12">
	<% if (items.length > 0){ %>
		<table class="table">
			<thead>
				<tr>
					<th>Event Id</th>
					<th>Event Name</th>
					<th>Description</th>
					<th>Location</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% items.forEach(function(item,index){ %>
					<tr>
						<td><%= index+1 %></td>
						<td><%= item.e_name %></td>
						<td><%= item.e_desc %></td>
						<td><%= item.e_location %></td>
						<td>
							<a href="/event/edit/<%= item.e_id %>" class="btn btn-success">Edit</a>
							<a href="/event/delete/<%= item.e_id %>" class="btn btn-danger">Delete</a>
						</td>
					</tr>
					<% }); %>
			</tbody>
		</table>
	<% }else{ %>
		<p> <strong>There are no records available<strong> </p>
	<% } %>	

	</div>
</div>

<% include ../partials/footer %>